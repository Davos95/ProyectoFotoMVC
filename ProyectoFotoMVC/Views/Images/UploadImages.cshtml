
@{
    ViewBag.Title = "UploadImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section events {
    <script src="~/Scripts/scriptUploadImages.js"></script>
    <link href="~/Content/styleUploadImages.css" rel="stylesheet" />
}
<div class="row">
    <div class="col s12 m10 l8 xl5 offset-m2 offset-l3 offset-xl3 ">
        <form method="post" enctype="multipart/form-data">
            <div id="wrapper">
                <div id="drop-area">
                    <h3 class="drop-text">Arrastra las imagenes aqui</h3>
                    <h5>Tambien puedes dar <label style="color: blue;font-size:20px;">click<input type="file" multiple hidden /></label> para abrir el explorador de archivos</h5>
                </div>
            </div>
            <div>
                <button type="submit">Enviar</button>
            </div>
        </form>
    </div>
</div>


