@using RepositorioPictureManager.Models
@model USERS

@{
    ViewBag.Title = "login";
}

<div class="row">
    <div class="col s12" style="text-align:center">
        <h3>Pictures Manager</h3>
    </div>
    <div class="row"></div>
    <div class="row" style="margin-top:5%">
        <div class="col s12 m6 l6 xl4 offset-m3 offset-l3 offset-xl4">
            <div class="card">
                <div class="card-content">
                    @using (Html.BeginForm())
                    {
                        <div class="input-field">
                            @Html.EditorFor(model => model.NICK)
                            @Html.LabelFor(model => model.NICK, "Nickname")
                            @Html.ValidationMessageFor(model => model.NICK)
                        </div>
                        <div class="input-field">
                            @Html.PasswordFor(model => model.PWD)
                            @Html.LabelFor(model => model.PWD, "Password")
                            @Html.ValidationMessageFor(model => model.PWD)
                        </div>
                        <div class="input-field">
                            <button type="submit" class="btn blue waves waves-effect waves-darken">ENTRAR</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

