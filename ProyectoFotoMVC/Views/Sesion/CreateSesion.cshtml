@using RepositorioPictureManager.Models
@model List<COMISION>
@{
    ViewBag.Title = "Crear Sesion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {

    <link href="~/Content/styleCreateSession.css" rel="stylesheet" />
}
@section events{
    <script>
        $(document).ready(function () {
            M.AutoInit();
        });
    </script>

}
<div class="row">
    <div class="col s12 m4 l4 xl4 offset-m4 offset-l4 offset-xl4">
        <div class="card">
            <div class="card-title center-align">
                CREAR SESIÓN
            </div>
            <div class="card-content">
                <form method="post">
                    <div class="input-field">
                        <input type="text" name="name" id="name" />
                        <label for="name"><i class="material-icons iconInput">label</i>Nombre de la sesión</label>
                    </div>
                    <div class="input-field">
                        <textarea name="description" id="description" placeholder="Descripcion" style="resize:none; height:70px;"></textarea>
                    </div>
                    <div class="input-field">
                        <input type="date" id="date" name="date" class="" />
                        <label for="date"><i class="material-icons iconInput">date_range</i>Fecha de la sesión</label>
                    </div>
                    <div class="input-field">
                        <select name="comision" id="comision">
                            <option disabled selected>Selecciona una opción</option>
                            @if (Model != null)
                            {
                                foreach (COMISION c in Model)
                                {
                                    <option value="@c.ID">@c.NAME</option>
                                }
                            }
                        </select>
                        <label for="comision"><i class="material-icons iconSelect">attach_money</i>Comision</label>
                    </div>
                    <div class="input-field">
                        <button type="submit" class="btn waves-effect waves-darken green">Crear sesión</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>